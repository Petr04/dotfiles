[bar/mybar]

bottom = true

width = 100%
height = 3.35%
fixed-center = false

background = #242829
foreground = #dfdfdf

padding-left = 0
padding-right = 2

module-margin-left = 3
module-margin-right = 3

font-0 = fixed:pixelsize=9;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=9;1

modules-left = i3
modules-right = pulseaudio battery keyboard date

separator = "#"

tray-detached = false
tray-position = right


[module/date]
type = internal/date
interval = 1.0

date = %a, %e %b
time = %H:%M

date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
label = %date% %time%

[module/battery]
type = internal/battery
; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = ACAD
label-discharging = %percentage%% discharg
label-charging = %percentage%% charging
label-full = %percentage%% full

[module/i3]
type = internal/i3

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%

label-focused = %index%
label-focused-foreground = #ffffff
label-focused-padding = 4

label-unfocused = %index%
label-unfocused-foreground = #888
label-unfocused-padding = 4

label-visible = %index%
label-visible-padding = 4

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4

[module/title]
type = internal/xwindow

; Available tags:
;   <label> (default)
format = <label>
format-padding = 4

; Available tokens:
;   %title%
; Default: %title%
label = %title%
; label-maxlen = 50

; Used instead of label when there is no window title
; Available tokens:
;   None
; label-empty = Empty
; label-empty-foreground = #707880

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
; sink = alsa_output.pci-0000_12_00.3.analog-stereo
sink = 0

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
; format-volume = <ramp-volume> <label-volume>

label-volume = vol %percentage%%
label-muted = vol muted

[module/keyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock
